{
  "name": "courtpulse",
  "version": "1.0.0",
  "description": "CourtPulse - similar to Surfline.com but for all sports",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=frontend",
    "start:frontend": "npm run start --workspace=frontend",
    "test": "npm run test --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "docker:dev": "docker-compose -f docker/dev/docker-compose.yml up --build",
    "docker:staging": "docker-compose -f docker/staging/docker-compose.yml up --build",
    "docker:prod": "docker-compose -f docker/prod/docker-compose.yml up --build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}